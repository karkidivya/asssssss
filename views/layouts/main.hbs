<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Latest compiled and minified Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
    <link href="sign-in.css" rel="stylesheet" />

    <title>WEB322 - Assignment 5</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">

        <div class="col-2"></div>

        <!-- Brand and toggle get grouped for better mobile display -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="#">WEB322 - Assignment 5</a>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarNav">
          {{#if session.user}}

            <ul class="nav navbar-nav navbar-right">
              {{#navLink "/Shop"}}Shop{{/navLink}}
              {{#navLink "/About"}}About{{/navLink}}
              {{#navLink "/Items"}}Items{{/navLink}}
              {{#navLink "/Categories"}}Categories{{/navLink}}
              {{#navLink "/items/add"}}Add Items{{/navLink}}
              {{!-- {{#navLink "/logout"}}logout{{/navLink}} --}}
              {{!-- {{#navLink "/history"}}userHistory{{/navLink}} --}}
            </ul>

            <div class="dropdown" style = 'margin-left : 600px'>
              <button
                class="btn btn-secondary dropdown-toggle"
                type="button"
                id="dropdownMenuButton"
                data-toggle="dropdown"
                data-bs-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                
              >
                &nbsp;&nbsp;{{session.user.userName}}&nbsp;&nbsp;
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/userHistory">User History</a>
                <a class="dropdown-item" href="/logout">Log Out</a>
              </div>
            </div>
          {{else}}
            <ul class="nav navbar-nav navbar-right">
              {{#navLink "/login"}}login{{/navLink}}
              {{#navLink "/register"}}register{{/navLink}}
            </ul>
          {{/if}}
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>

    <div class="container" style="padding-top: 90px;">
      {{{body}}}
    </div>

    <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>